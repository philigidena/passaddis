# Database (Supabase free tier recommended)
DATABASE_URL="postgresql://user:password@localhost:5432/passaddis?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# App
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:8081"
API_URL="http://localhost:3000"

# ============== PAYMENT PROVIDERS ==============

# RECOMMENDED: Chapa (Payment Facilitator - No license needed)
# Get keys at: https://dashboard.chapa.co
CHAPA_SECRET_KEY=""
CHAPA_WEBHOOK_SECRET=""

# Telebirr C2B WebCheckout (Primary payment method)
# Get credentials from Ethio Telecom Developer Portal
# Docs: https://developerportal.ethiotelebirr.et

# Your merchant application ID
TELEBIRR_MERCHANT_APP_ID=""

# Fabric authentication credentials
TELEBIRR_FABRIC_APP_ID=""
TELEBIRR_APP_SECRET=""

# Merchant short code
TELEBIRR_SHORT_CODE=""

# Your RSA private key for signing requests (base64 or PEM format)
# Generate using Telebirr Sign Tool with SHA256WithRSA, KeySize 3072
TELEBIRR_PRIVATE_KEY=""

# Telebirr's public key for verifying callback signatures (CRITICAL for security)
# Obtain this from Telebirr after registration
TELEBIRR_PUBLIC_KEY=""

# API URLs (use testbed for development, production for live)
# Testbed: https://developerportal.ethiotelebirr.et:38443/apiaccess/payment/gateway
# Production: https://telebirrappcube.ethiomobilemoney.et:38443/apiaccess/payment/gateway
TELEBIRR_API_URL="https://developerportal.ethiotelebirr.et:38443/apiaccess/payment/gateway"

# WebCheckout URLs
# Testbed: https://developerportal.ethiotelebirr.et:38443/payment/web/paygate?
# Production: https://telebirrappcube.ethiomobilemoney.et:38443/payment/web/paygate?
TELEBIRR_WEB_CHECKOUT_URL="https://developerportal.ethiotelebirr.et:38443/payment/web/paygate?"

# FUTURE: Direct CBE Birr
CBE_MERCHANT_ID=""
CBE_API_KEY=""
CBE_API_URL=""

# ============== EMAIL SERVICE ==============

# Resend (100 emails/day free) - https://resend.com
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=""

# Sender email address
# For testing: use "PassAddis <onboarding@resend.dev>"
# For production: use your verified domain, e.g., "PassAddis <noreply@passaddis.com>"
EMAIL_FROM="PassAddis <onboarding@resend.dev>"

# ============== SMS PROVIDER ==============

# Afro Message (Ethiopia) - https://afromessage.com
AFRO_SMS_API_KEY=""
AFRO_SMS_IDENTIFIER=""
AFRO_SMS_SENDER_ID="PassAddis"

# ============== FILE STORAGE ==============

# AWS S3 (Recommended - 5GB free)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-north-1"
AWS_S3_BUCKET="passaddis-uploads"

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ============== PLATFORM SETTINGS ==============

# PassAddis commission rate (percentage)
PLATFORM_COMMISSION_RATE=5

# Settlement period (days after payment)
SETTLEMENT_DAYS=3
