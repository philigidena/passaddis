// PassAddis Database Schema - SQLite for Local Development
// Event ticketing + Shop with supermarket pickup

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============== USERS ==============

model User {
  id            String    @id @default(uuid())
  phone         String    @unique
  email         String?   @unique
  name          String?
  passwordHash  String?
  isVerified    Boolean   @default(false)
  role          String    @default("USER") // USER, ORGANIZER, ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  tickets       Ticket[]
  orders        Order[]
  organizer     Organizer?
  merchant      Merchant?
  otpCodes      OtpCode[]

  @@map("users")
}

model OtpCode {
  id        String   @id @default(uuid())
  code      String
  phone     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@map("otp_codes")
}

// ============== MERCHANTS (Sub-merchants under PassAddis) ==============

model Merchant {
  id              String   @id @default(uuid())
  merchantCode    String   @unique
  businessName    String
  tradeName       String?
  description     String?
  logo            String?
  type            String   @default("ORGANIZER") // ORGANIZER, SHOP, SUPERMARKET, VENDOR
  status          String   @default("PENDING") // PENDING, ACTIVE, SUSPENDED, BLOCKED

  // Business details
  tinNumber       String?
  licenseNumber   String?
  businessAddress String?
  city            String   @default("Addis Ababa")

  // Settlement info
  bankName        String?
  bankAccount     String?
  telebirrAccount String?
  cbeBirrAccount  String?

  // Commission & fees
  commissionRate  Float    @default(5.0)
  settlementDays  Int      @default(3)
  minPayout       Float    @default(100)

  // Verification
  isVerified      Boolean  @default(false)
  verifiedAt      DateTime?
  verifiedBy      String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique
  events          Event[]
  settlements     Settlement[]
  walletTransactions WalletTransaction[]

  @@map("merchants")
}

// ============== MERCHANT WALLET ==============

model WalletTransaction {
  id            String   @id @default(uuid())
  type          String   // CREDIT, DEBIT, FEE, REFUND, ADJUSTMENT
  amount        Float
  fee           Float    @default(0)
  netAmount     Float
  balanceBefore Float
  balanceAfter  Float
  description   String?
  reference     String?
  createdAt     DateTime @default(now())

  merchant      Merchant @relation(fields: [merchantId], references: [id])
  merchantId    String

  @@map("wallet_transactions")
}

// ============== SETTLEMENTS ==============

model Settlement {
  id              String   @id @default(uuid())
  settlementRef   String   @unique
  amount          Float
  fee             Float    @default(0)
  netAmount       Float
  status          String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  method          String   // CHAPA, TELEBIRR, CBE_BIRR, BANK_TRANSFER
  bankRef         String?
  processedAt     DateTime?
  failureReason   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  merchant        Merchant @relation(fields: [merchantId], references: [id])
  merchantId      String

  @@map("settlements")
}

// ============== ORGANIZERS (Legacy - now Merchant) ==============

model Organizer {
  id            String   @id @default(uuid())
  businessName  String
  description   String?
  logo          String?
  isVerified    Boolean  @default(false)
  bankAccount   String?
  telebirrId    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique
  events        Event[]

  @@map("organizers")
}

// ============== EVENTS ==============

model Event {
  id            String   @id @default(uuid())
  title         String
  description   String
  imageUrl      String?
  venue         String
  address       String?
  city          String   @default("Addis Ababa")
  date          DateTime
  endDate       DateTime?
  category      String   // MUSIC, SPORTS, ARTS, COMEDY, FESTIVAL, CONFERENCE, NIGHTLIFE, OTHER
  status        String   @default("DRAFT") // DRAFT, PUBLISHED, CANCELLED, COMPLETED
  isFeatured    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Can be linked to either Organizer (legacy) or Merchant (new)
  organizer     Organizer? @relation(fields: [organizerId], references: [id])
  organizerId   String?
  merchant      Merchant?  @relation(fields: [merchantId], references: [id])
  merchantId    String?

  ticketTypes   TicketType[]
  tickets       Ticket[]

  @@map("events")
}

// ============== TICKETS ==============

model TicketType {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  quantity    Int
  sold        Int      @default(0)
  maxPerOrder Int      @default(10)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event       Event    @relation(fields: [eventId], references: [id])
  eventId     String
  tickets     Ticket[]

  @@map("ticket_types")
}

model Ticket {
  id          String    @id @default(uuid())
  qrCode      String    @unique
  status      String    @default("VALID") // VALID, USED, CANCELLED, EXPIRED
  usedAt      DateTime?
  createdAt   DateTime  @default(now())

  user        User      @relation(fields: [userId], references: [id])
  userId      String
  event       Event     @relation(fields: [eventId], references: [id])
  eventId     String
  ticketType  TicketType @relation(fields: [ticketTypeId], references: [id])
  ticketTypeId String
  order       Order?    @relation(fields: [orderId], references: [id])
  orderId     String?

  @@map("tickets")
}

// ============== SHOP ==============

model ShopItem {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  category    String   // WATER, DRINKS, SNACKS, MERCH
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]

  @@map("shop_items")
}

model PickupLocation {
  id        String   @id @default(uuid())
  name      String
  area      String
  address   String
  hours     String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]

  @@map("pickup_locations")
}

// ============== ORDERS ==============

model Order {
  id              String   @id @default(uuid())
  orderNumber     String   @unique
  status          String   @default("PENDING") // PENDING, PAID, READY_FOR_PICKUP, COMPLETED, CANCELLED, REFUNDED
  subtotal        Float
  serviceFee      Float    @default(0)
  platformFee     Float    @default(0)
  total           Float
  merchantAmount  Float?
  paymentMethod   String?  // CHAPA, TELEBIRR, CBE_BIRR, BANK_TRANSFER
  paymentRef      String?
  qrCode          String?  @unique
  pickedUpAt      DateTime?
  settledAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
  userId          String
  pickupLocation  PickupLocation? @relation(fields: [pickupLocationId], references: [id])
  pickupLocationId String?

  tickets         Ticket[]
  items           OrderItem[]
  payment         Payment?

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Float
  createdAt DateTime @default(now())

  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  shopItem  ShopItem @relation(fields: [shopItemId], references: [id])
  shopItemId String

  @@map("order_items")
}

// ============== PAYMENTS ==============

model Payment {
  id            String   @id @default(uuid())
  amount        Float
  currency      String   @default("ETB")
  method        String   // CHAPA, TELEBIRR, CBE_BIRR, BANK_TRANSFER
  status        String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED, REFUNDED
  providerRef   String?
  providerData  String?  // JSON string for SQLite
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  order         Order    @relation(fields: [orderId], references: [id])
  orderId       String   @unique

  @@map("payments")
}
